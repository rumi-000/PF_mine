<div class="container-fluid">
  
 <div class="row mt-5 mb-5 offset-5">
  <h2>タグの編集</h2>
 </div>
 
  <div class="row ml-2">
   <div class="col-6">
  <%= form_with model: @tag, url: admin_tag_path(@tag)  do |f| %>
  <div class="form-group mt-3">
  <%= f.label:image , 'タグイメージ画像'  %>
  <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
   <%= f.label:name , 'タグ名' %>
   <%= f.text_field :name %>
   <br>
   <%= f.label:description , 'タグ説明' %>
   <%= f.text_field :description %>
  </div>
  <div class="form-group">
   <%= f.submit "変更する"  %>
  </div>
<% end %>
</div>

<div class="col-6">
 <P>タグイメージ画像</P>
  <div><%= image_tag @tag.image, size: "200x200" %></div>
</div>

<%= link_to "戻る", admin_tags_path %>

</div>
</div>