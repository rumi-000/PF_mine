<div class="container-fluid" style="height:900px;">
  
 <div class="row mt-5 mb-5 offset-5">
  <div class="col-auto">
   <h2>投稿一覧</h2>
  </div>
 
  <div class="col-auto">
   <h4>検索は<%= link_to "こちら" , search_path %>からご利用ができます。</h4>
  </div>
  </div>

<!--投稿が一件もないとき-->
　<!--投稿メッセージ-->
 <% if @posts.empty? %>
  <div class ="row ml-5">
   <p><%= @message %></p>
  </div>
  <!--新規投稿リンク-->
 <div class ="row ml-5">
 <div class="card m-4" style="height:300px; width:400px;">
  <div class="card-body">
   <h5 class="card-title">投稿する</h5>
   <p class="card-text"></p>
   <a href="/posts/new" class="btn btn-primary">クリック</a>
  </div>
 </div>
 </div>
 
<% else %>
<!--投稿があるとき-->
<div class="row mr-10">
 <% @posts.each do |post| %>
<tr>
 <div class="card m-4" style="height:400px; width:400px;">
   <div class="card-body">
    <%= image_tag post.image, size: "100x100" %>
    <h5 class="card-title">商品名：<%= link_to post.item_name, post_path(post.id)%></h5>
    <p class="card-text">商品説明：<%= post.item_description %></p>
    <p class="card-text">いいね件数:<%= post.favorites.count %> 件</p>
    <p class="card-text">コメント件数:<%= post.post_comments.count %>件</p>
    <p class="card-text">タグ:<% post.tags.each do |tag| %>
                              <%= tag.name %>
          　　　　　　　　　　　　　　　　　　　<% end %></p>
    <p class="card-text">投稿者:<%= link_to post.user.name, user_path(post.user_id)%></p>
   </div>
 </div>
  <% end %>
 <div class="card m-4" style="height:300px; width:400px;">
  <div class="card-body">
   <h5 class="card-title">投稿する</h5>
   <p class="card-text"></p>
   <a href="/posts/new" class="btn btn-primary">new post</a>
  </div>
 </div>
 </tr>
  <% end %>
 </div>
 
 <div class ="row ml-10">
  <%=link_to "戻る", choice_path %>
 </div>
</div>
 