
<p>防災グッズを投稿する</p>
<%= form_with model:@post, url:posts_path do |f| %>

  <div class="form-group">
    <%= f.label:item_name , 'グッズ名' %>
    <%= f.text_field :item_name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label:item_description , 'グッズ説明' %>
    <%= f.text_area :item_description, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "Create post" ,class: 'btn btn-success' %>
  </div>
<% end %>
