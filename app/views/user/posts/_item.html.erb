<h4 style="padding: 1rem 2rem;">グッズ画像
   <br><%= image_tag post.image, size: "200x200" %></h4>
   
  <div class = "row-6 text-left">
   <h4>商品名</h4>
  </div>
  <div class = "row-6 text-left" style ="height:40px;">
   <h5><%= post.item_name %></h5>
  </div>

  <div class = "row-6 text-left">
   <h4>商品説明</h4>
  </div>
  <div class = "row-6 text-left" style ="height:90px;">
   <p><%= post.item_description %></p>
  </div>
   
  <div class = "row-6 text-left">
   <h4>タグ名</h4>
  </div>
  <div class = "row-6 text-left" style ="height:40px;">
   <% post.tags.each do |tag| %>
    <p><%= link_to tag.name, tags_path %></p>
   <% end %>
  </div>