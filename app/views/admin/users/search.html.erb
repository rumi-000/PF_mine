<div class="jumbotron text-center mt-4" style="background-color: #BDBDBD; text-white; margin: 0 auto; padding: 5px; border-radius: 30px; width: 20%;">
  <h2 class="m-0">会員一覧</h2>
</div>

<!--メッセージ-->
 <div class="row justify-content-md-center mt-2">
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to "管理者トップへ" , admin_users_path %></h4>
  </div>
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to "会員一覧へ" , admin_users_path %></h4>
  </div>


  <!--ユーザ検索-->
 <div class="jumbotron text-center my-4 pt-3" style="background-color: #D9D9D9; margin: 0 auto; padding: 5px; border-radius: 30px; width: 95%; height:150px;">
  
  <div class="row justify-content-md-center mt-2">
   <h4>ユーザー名を検索</h4>
  </div>
  
 <!--検索フォーム-->
  <div class="row justify-content-md-center mt-2">
   <%= form_tag admin_search_path, method: :get do %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag '検索', class: "btn btn-primary" %>
   <% end %>
  </div>
 </div>
 
  <!--検索結果-->
 <div class="jumbotron text-center my-4 pt-3" style="background-color: #D9D9D9; margin: 0 auto; padding: 5px; border-radius: 30px; width: 95%; height:300px;">
  <div class="row justify-content-md-center mt-2">
   <h4>検索結果</h4>
  </div>
 
  <div class="row justify-content-md-center mt-2">
   <table class="table">
    <thead>
     <tr>
      <th scope="col">会員No.</th>
      <th scope="col">名前</th>
      <th scope="col">会員ステータス</th>
     </tr>
    </thead>
    <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= link_to user.id, admin_user_path(user.id) %></td>
      <td><%= user.name %></td>
      <td><% if user.is_deleted? %>
           <span class="text-danger">退会</span>	
          <% else %>
           <span class="text-primaryr">有効</span>
          <% end %>
      </td>
     </tr>
    <% end %> 
    </tbody>
   </table>
  </div>
</div>