<div class="jumbotron text-center mt-4" style="background-color: #BDBDBD; text-white; margin: 0 auto; padding: 5px; border-radius: 30px; width: 50%;">
  <h2 class="m-0">タグの作成・一覧</h2>
</div>
 
 <!--メッセージ-->
 <div class="row justify-content-md-center mt-2">
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to "管理者トップへ" , admin_path %></h4>
  </div>
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to '会員側の一覧を確認する', tags_path %></h4>
  </div>
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to 'タグ依頼を確認する', admin_chats_path %></h4>
  </div>
 </div>
 
   <!--タグの作成-->
 <div class="jumbotron text-center my-4 pt-3" style="background-color: #D9D9D9; margin: 0 auto; padding: 5px; border-radius: 30px; width: 95%;">
  
  <div class="row justify-content-md-center mt-2">
   <h4>タグの作成</h4>
  </div>
 
  <!--検索フォーム-->
  <div class="row justify-content-md-center mt-2">
　<%= form_with model:@tag, url: admin_tags_path do |f| %>
　<%= render 'layouts/error_messages', model: @tag %>
　
  <div class="form-group mt-3">
   <%= f.label:image , 'タグイメージ画像'  %>
    <br><%= f.file_field :image, accept: "image/*" %>
  </div>
  
  <div class="form-group">
   <%= f.label:name , 'タグ名' %>
    <br><%= f.text_field :name %>
  </div>
  
  <div class="form-group">
   <%= f.label:description , 'タグ説明' %>
    <br><%= f.text_field :description %>
  </div>
   
   <div class="form-group">
    <br><%= f.submit "投稿する"  %>
   </div>
  <% end %>
  </div>
 </div>


 <!--タグの一覧情報-->
 <div class="jumbotron text-center my-5 py-3" style="background-color: #D9D9D9; margin: 0 auto; padding: 5px; border-radius: 30px; width: 95%;">
  
  <div class="row justify-content-md-center mt-2">
   <h4>タグの一覧</h4>
  </div>
  
  <div class="row justify-content-md-center mt-2">
  <% @tags.each do |tag| %>
  <tr>
   <div class="card m-2" style="width: 12rem; border-radius: 30px; background-color: #FAFAFA;">
   <%= image_tag tag.image, size: "100x100", class: "mx-auto d-block" %>
    <div class="card-body">
     <h5 class="card-title"><%= tag.name %></h5>
      <p class="card-text"><%= tag.description %></p>
       <a><%= link_to '編集する', edit_admin_tag_path(tag.id) %></a>
       <a><%= link_to '削除する', admin_tag_path(tag.id), method: :delete,  data: { confirm: '本当に消しますか？' } %></a>
    </div>
   </div>
  </tr>
  <% end %>
 </div>

