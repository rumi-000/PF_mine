<div class="jumbotron text-center mt-4" style="background-color: #BDBDBD; margin: 0 auto; padding: 5px; border-radius: 30px; width: 30%;">
  <h2 class="m-0">タグ編集</h2>
</div>
 
 <!--メッセージ-->
 <div class="row justify-content-md-center mt-2">
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to "編集を止める" , admin_tags_path %></h4>
  </div>
  <div class="col-auto">
   <h4 style="padding: 1rem 1rem; border-bottom: 5px solid #BDBDBD;"><%= link_to "管理者機能一覧へ" , admin_path %></h4>
  </div>
 </div>
  
 
 <!--タグ編集-->
 <div class="jumbotron text-center my-4" style="background-color: #D9D9D9; margin: 0 auto; padding: 20px; border-radius: 30px; width: 95%">
 <h2>タグ詳細</h2>
 
  <div class="row justify-content-around mt-5">
  
   <!--編集フォーム-->
   <div class="col-6">
   <%= form_with model: @tag, url: admin_tag_path(@tag)  do |f| %>
   
   <div class="form-group mt-3">
    <%= f.label:image , 'タグイメージ画像'  %>
    <br><%= f.file_field :image, accept: "image/*" %>
   </div>
  
   <div class="form-group">
    <%= f.label:name , 'タグ名' %>
    <br><%= f.text_field :name %>
   </div>
   
   <div class="form-group">
    <%= f.label:description , 'タグ説明' %>
    <br><%= f.text_field :description %>
   </div>
   
   <div class="form-group">
    <%= f.submit "変更する"  %>
   </div>
  <% end %>
  </div>

  <!--現在のタグ画像-->
  <div class="col-6">
   <P>現在のタグイメージ画像</P>
   <br><%= image_tag @tag.image, size: "200x200" %></div>
  </div>
 </div>
