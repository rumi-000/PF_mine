<div class="container-fluid">
  
 <div class="row mt-5 mb-5 offset-5">
  <h2>タグの編集</h2>
 </div>
 
  <div class="row ml-2">
  <%= form_with model: @tag, url: admin_tag_path(@tag)  do |f| %>
  <div class="form-group">
   <%= f.label:name , 'タグ名' %>
   <%= f.text_field :name %>
   <br>
   <%= f.label:description , 'タグ説明' %>
   <%= f.text_field :description %>
  </div>
  <div class="form-group">
   <%= f.submit "変更する"  %>
  </div>
<% end %>
</div>

<% link_to "戻る", tags_path %>

</div>