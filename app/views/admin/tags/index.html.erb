<div class="container-fluid">
  
 <div class="row mt-5 mb-5 offset-5">
  <h2>タグの確認、作成</h2>
 </div>
 
 <div class="row ml-2">
　<%= form_with model:@tag, url: admin_tags_path do |f| %>
  <div class="form-group">
   <%= f.label:name , 'タグ名' %>
   <%= f.text_field :name %>
  </div>
  <div class="form-group">
   <%= f.submit "投稿する"  %>
  </div>
<% end %>
</div>

<div class="row ml-2">
<table class="admin_tag">
<thead>
  <tr>
    <th>タグ名</th>
    <th></th>
    <th></th>
  </tr>
 </thead>
 <tbody>
   <% @tags.each do |tag| %>
   <tr>
    <td class="text-center"><%= tag.name %></td>
    <td class="text-center"><%= link_to '編集する', edit_admin_tag_path(tag.id) %></td>
    <td class="text-center"><%= link_to '削除する', admin_tag_path(tag.id), method: :delete,  data: { confirm: '本当に消しますか？' } %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
  
<div>
<%= link_to 'topへ戻る', admin_path %>
</div>

</div>